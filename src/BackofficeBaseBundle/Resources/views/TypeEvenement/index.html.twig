{% extends 'BackofficeBaseBundle::Layout/AdminLayout.html.twig' %}

{% block navActive %}type-intervs{% endblock %}

{% block contentHeader %}
<h1>
    Administration des types d'interventions
</h1>
{% endblock %}

{% block content %}

<div class="col-md-9 col-sm-8 col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Liste des types d'interventions</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped dataTable">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                <tbody>
                </tfoot>
                    {% for typeEvenement in typeEvenements %}
                    <tr>
                        <td><a href="{{ path('typeevenement_show', { 'id': typeEvenement.id }) }}">{{ typeEvenement.nom }}</a></td>
                        <td>
                            <a title="Affichier" href="{{ path('typeevenement_show', { 'id': typeEvenement.id }) }}"><i class="fa fa-2x fa-info"></i></a>
                            <span>   </span>
                            <span>   </span>
                            <a title="Modifier" href="{{ path('typeevenement_edit', { 'id': typeEvenement.id }) }}"><i class="fa fa-2x fa-edit"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-3 col-sm-4 col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Ajout de type d'intervention</h3>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="Create" />
            {{ form_end(form) }}
        </div>
    </div>
</div>


{% endblock %}
