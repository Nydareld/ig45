{% extends 'BackofficeBaseBundle::Layout/AdminLayout.html.twig' %}

{% block navActive %}niveau{% endblock %}

{% block contentHeader %}
<h1>
    Administration des niveaux d'etablissements
</h1>
{% endblock %}

{% block content %}

<div class="col-md-9 col-sm-8 col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Liste des niveaux d'Ã©tablissements</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped dataTable">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Afficher</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Afficher</th>
                    </tr>
                <tbody>
                </tfoot>
                    {% for niveau in niveaux %}
                    <tr>
                        <td><a href="{{ path('niveau_show', { 'id': niveau.id }) }}">{{ niveau.nom }}</a></td>
                        <td>
                            <a title="Affichier" href="{{ path('niveau_show', { 'id': niveau.id }) }}"><i class="fa fa-2x fa-info"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-3 col-sm-4 col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Ajout de niveau</h3>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="Create" />
            {{ form_end(form) }}
        </div>
    </div>
</div>


{% endblock %}
