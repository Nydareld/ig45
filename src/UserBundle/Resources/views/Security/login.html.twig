{% extends "UserBundle::Layout/UserFormLayout.html.twig" %}

{% block content %}

<div class="login-box-body">
    <p class="login-box-msg">Connectez vous pour continuer</p>


    <form action="{{ path("fos_user_security_check") }}" method="post" role="form">

        {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-group has-feedback">
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="prenom.nom" required="required" >
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="Password" id="password" name="_password" required="required" />
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Se souvenir de moi
                    </label>
                </div>
            </div>

            <div class="col-xs-4">
                <input type="submit" class="btn btn-primary btn-block btn-flat" id="_submit" name="_submit" value="Connexion" />
            </div>

        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    </form>

    <!-- /.social-auth-links -->

    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©</a><br>

</div>

{% endblock %}

{% block styles %}
    {{ parent() }}
    <!-- Icheck -->
    <link rel="stylesheet" href="{{ asset('bower_components/AdminLTE/plugins/iCheck/square/blue.css') }}">
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <!-- icheck -->
    <script src="{{ asset('bower_components/AdminLTE/plugins/iCheck/icheck.min.js') }}"></script>

    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
{% endblock %}
