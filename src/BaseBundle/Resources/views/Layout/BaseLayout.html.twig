<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>
            {% block title %}IG45 BaseFront{% endblock %}
        </title>
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        {% block styles %}
            <!--Import Google Icon Font-->
            <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <!--Import materialize.css-->
            <link type="text/css" rel="stylesheet" href="{{ asset('bower_components/materialize/dist/css/materialize.min.css') }}" media="screen,projection"/>
            <!--Import style.css -->
            <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="blue lighten-2">
                <div class="nav-wrapper container">
                    <a href="#" class="brand-logo">Le Groupe Intergénérations</a>
                    <ul class="right hide-on-med-and-down">
                        <li>
                            <a href="#">Jean-François Archambault<i class="material-icons right">person</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <div class="container">
            {% block actionAgenda %}
                <div class="action_agenda">
                    <a href="#" class="waves-effect waves-light btn blue lighten-2">
                        <i class="material-icons">chevron_left</i>
                    </a>
                    <a href="{{ path('evenement_new') }}" class="waves-effect waves-light btn blue lighten-2">Créer une Intervention</a>
                    <a href="#" class="waves-effect waves-light btn blue lighten-2">Agenda Personnel</a>
                </div>
            {% endblock %}
            {% block contentBody %}{% endblock %}
        </div>
        {% block scripts %}
            <!--Import jQuery before materialize.js-->
            <script type="text/javascript" src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bower_components/materialize/dist/js/materialize.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
